<h1>
  id=
  <%= @task.id %> の詳細ページ
</h1>

<table class='table table-striped'>
<tr>
  <th>id</th>
  <td><%= @task.id %></td>
</tr>
  
<tr>
  <th>タスクの内容</th>
  <td><%= @task.content %></td>
</tr>

<tr>
  <th>タスクの状態</th>
  <td><%=@task.status %></td>
</tr>
</table>



<%= link_to 'この内容を編集する', edit_task_path(@task), class: "btn btn-success" %>
<%= link_to 'この内容を削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: "btn btn-warning"%>
<%= link_to '一覧に戻る', tasks_path %>